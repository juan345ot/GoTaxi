#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run linting for all projects
echo "ğŸ“ Running ESLint..."
cd go-taxi-backend && npm run lint
cd ../GoTaxiPassengerApp && npm run lint
cd ../go-taxi-admin-web && npm run lint

# Run Prettier check
echo "ğŸ¨ Running Prettier check..."
cd ../go-taxi-backend && npm run format:check
cd ../GoTaxiPassengerApp && npm run format:check
cd ../go-taxi-admin-web && npm run format:check

echo "âœ… Pre-commit checks passed!"
