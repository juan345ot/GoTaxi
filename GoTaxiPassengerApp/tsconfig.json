{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "customConditions": ["react-native"],
    "lib": ["ESNext"],
    "jsx": "react-native",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
